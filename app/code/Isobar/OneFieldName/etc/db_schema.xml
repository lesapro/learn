<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="isobar_customer_backup" resource="default" engine="innodb" comment="Isobar Customer Backup">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false" comment="Entity ID"/>
        <column xsi:type="varchar" name="firstname" nullable="true" length="255" comment="First Name"/>
        <column xsi:type="varchar" name="lastname" nullable="true" length="255" comment="Last Name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
    <table name="isobar_customer_address_backup" resource="default" engine="innodb" comment="Isobar Customer Address Backup">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false" comment="Entity ID"/>
        <column xsi:type="varchar" name="firstname" nullable="true" length="255" comment="First Name"/>
        <column xsi:type="varchar" name="lastname" nullable="true" length="255" comment="Last Name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
    <table name="customer_entity" resource="default" engine="innodb" comment="Customer Entity">
        <column xsi:type="varchar" name="lastname" nullable="true" length="255" comment="Last Name"/>
    </table>
    <table name="customer_address_entity" resource="default" engine="innodb" comment="Customer Address Entity">
        <column xsi:type="varchar" name="lastname" nullable="true" length="255" comment="Last Name"/>
    </table>
</schema>
