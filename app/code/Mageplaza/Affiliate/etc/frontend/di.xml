<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Mageplaza\Affiliate\Controller\Plugin\Account">
        <arguments>
            <argument name="allowedActions" xsi:type="array">
                <item name="signup" xsi:type="string">signup</item>
                <item name="signuppost" xsi:type="string">signuppost</item>
            </argument>
        </arguments>
    </type>
    <type name="Mageplaza\Affiliate\Controller\Account">
        <plugin name="customer_account" type="Mageplaza\Affiliate\Controller\Plugin\Account"/>
    </type>
    <type name="Magento\Checkout\Controller\Cart\Index">
        <plugin name="mp_multishipping_disabler_shopping_cart" type="Mageplaza\Affiliate\Plugin\MultiShipping\ShoppingCart"/>
    </type>
    <type name="Magento\Checkout\Controller\Index\Index">
        <plugin name="mp_multishipping_disabler_checkout" type="Mageplaza\Affiliate\Plugin\MultiShipping\Checkout"/>
    </type>
    <type name="Mageplaza\Osc\Controller\Index\Index">
        <plugin name="mp_multishipping_disabler_osc" type="Mageplaza\Affiliate\Plugin\MultiShipping\Osc"/>
    </type>
</config>
