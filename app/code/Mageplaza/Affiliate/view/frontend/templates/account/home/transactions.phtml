/** @var Mageplaza\Affiliate\Block\Account\Home\Transaction $block */
$transactions = $block->getTransactions()

?>
<div class="box-account box-info box-affiliate-transaction">
    <div class="box-head">
        <h2><?= __('Transactions') ?></h2>
    </div>
    <table class="data-table" id="affiliate-transactions-history">
        <thead>
        <tr>
            <th class="col id">#</th>
            <th class="col title"><?= __('Title') ?></th>
            <th class="col amount"><?= __('Amount') ?></th>
            <th class="col amount"><?= __('Customer Ordered') ?></th>
            <th class="col status"><?= __('Status') ?></th>
            <th class="col created_at"><?= __('Created Date') ?></th>
        </tr>
        </thead>
        <tbody>
        <?php if ($transactions->getSize()): ?>
            <?php foreach ($transactions as $transaction): ?>
                <tr>
                    <td class="col"><?= $transaction->getId() ?></td>
                    <td class="col"><?= $transaction->getTitle() ?></td>
                    <td class="col a-right">
                        <span class="price"><?= $block->formatPrice($transaction->getAmount()) ?></span>
                    </td>
                    <td class="col"><?= $block->getCustomerEmailByOrderId($transaction->getOrderId()); ?></td>
                    <td class="col"><em><?= $transaction->getStatusLabel() ?></em></td>
                    <td class="col">
                        <span class="nobr"><?= $block->formatDate($transaction->getCreatedAt(), \IntlDateFormatter::MEDIUM, true) ?></span>
                    </td>
                </tr>
            <?php endforeach ?>
        <?php else: ?>
            <tr>
                <td colspan="6">
                    <span><?= __('No transaction found!') ?></span>
                </td>
            </tr>
        <?php endif; ?>
        </tbody>
    </table>
    <?php echo $block->getPagerHtml() ?>
</div>
